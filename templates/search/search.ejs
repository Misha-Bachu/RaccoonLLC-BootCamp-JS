<% layout('../layout/page') -%>

<!-- Main info block -->
<div class="b-page__wrapper">
    <div class="l-container">
        <div class="b-page__inner">
            <aside class="b-refinement__wrapper">
                <%- include ../product/sorting/sortingOptions %>
                <div class="b-refinement">
                    <div class="b-refinement__item">
                        <h2 class="b-refinement__title">Range</h2>
                        <ul class="b-refinement__values">
                            <li class="b-refinement__attribute">
                                <a href="#" class="b-refinement__link js-refine-link">
                                    <input class="b-form__checkbox" type="checkbox" id="refinement1" name="refinement1" value="Refinement label 1">
                                    <label class="b-form__label" for="refinement1">For Children</label>
                                </a>
                            </li>
                            <li class="b-refinement__attribute">
                                <a href="#" class="b-refinement__link js-refine-link">
                                    <input class="b-form__checkbox" type="checkbox" id="refinement2" name="refinement2" value="Refinement label 2">
                                    <label class="b-form__label" for="refinement2">For Beginners</label>
                                </a>
                            </li>
                            <li class="b-refinement__attribute">
                                <a href="#" class="b-refinement__link js-refine-link">
                                    <input class="b-form__checkbox" type="checkbox" id="refinement3" name="refinement3" value="Refinement label 3">
                                    <label class="b-form__label" for="refinement3">For Advanced</label>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
            <main class="b-products__wrapper">
                <h1 class="b-page__title">
                    Best Sellers
                </h1>
                <div class="b-page__title js-search-title d-none">
                    Search for
                    <span class="js-search-word"></span>
                    <span  class="b-page__close-icon js-clear-search">
                        <i class="fa fa-times-circle"></i>
                    </span >
                </div>
                <div class="b-products___list js-product-grid">
                    <%- include ../product/productTiles %>
                </div>
            </main>
        </div>
    </div>
</div>
