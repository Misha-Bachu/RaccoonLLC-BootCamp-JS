
<div class="b-product-tile js-product-tile js-product"
    data-pid="<%= product.id %>">
    <a href="<%= 'product/show?pid=' + product.id %> " class="b-product-tile__image-link">
        <img class="b-product-tile__image" src="<%= product.image %>">
    </a>
    <i class="js-quick-view fa fa-search-plus"
        data-url="<%= 'product/quick-view?pid=' + product.id %>"
    ></i>
    <div class="b-product-tile__details">
        <div class="b-product-tile__author"><%= product.author %></div>
        <div class="b-product-tile__name"><%= product.name %></div>
        <div class="b-product-tile__description"><%= product.description %></div>
        <div class="b-product-tile__variations">
            <span class="b-variation__item m-active">Book</span>
            <span class="b-variation__item">eBook</span>
        </div>
        <div class="b-product-tile__price"><%= product.price %>$</div>
        <a href="#" class="btn btn-add-to-cart js-add-to-cart">
            <i class="fa fa-cart-plus"></i> Add to Cart
        </a>
    </div>
</div>